<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:MemoTech" x:Class="MemoTech.MemoTechPage">
  <StackLayout Padding="15">
    <Label Text="Memory Tech(ä»®)"
	         HorizontalOptions="Center"
	         VerticalOptions="CenterAndExpand"
			     x:Name="AppName" 
           Margin="0, 20, 0, 30"
           FontSize="36" />

    <Button Text="Start"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            x:Name="MainButton" 
            Margin="20"
            WidthRequest = "200"
            HeightRequest = "150" />

    <Button Text="Stop"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            x:Name="StopButton"
            Margin="20"
            WidthRequest = "100"
            HeightRequest = "50" />

    <Button Text="Memory"
            HorizontalOptions="Center"
            VerticalOptions="StartAndExpand"
            x:Name="NextMemory"
            Margin="20"
            WidthRequest = "100"
            HeightRequest = "50" />
  </StackLayout>
</ContentPage>
